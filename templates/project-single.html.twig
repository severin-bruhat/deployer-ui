{% extends 'base.html.twig' %}
{% block body %}
    <h1>Projet {{ project.name }}</h1>
    
    <div class="page-header">
        <h2>Recette</h2>
    </div>
    <textarea class="code" name="deploy_file" id="deploy_file" rows="25" cols="150">{{ project.deploy_file_content }}</textarea><br>
    <button type="button" class="btn btn-lg btn-default" id="update_recipe" data-ref="{{ project.name }}">Mettre à jour</button>
    
    
     <div class="page-header">
        <h2>Actions</h2>
      </div>
      <p>
        <button type="button" class="btn btn-lg btn-success" id="deployStaging" data-ref="{{ project.name }}">Déployer en recette</button>
        <button type="button" class="btn btn-lg btn-warning" disabled="disabled">Rollback en recette</button>
      </p>
      <p>
        <button type="button" class="btn btn-lg btn-success" disabled="disabled">Déployer en prod</button>
        <button type="button" class="btn btn-lg btn-warning" disabled="disabled">Rollback en prod</button>
      </p>
      <p>
          Action manuelle : commande à exécuter
      </p>

{% endblock %}

{% block javascript %}
    <script src="/web/js/ace.js"></script>
    <script src="/web/js/mode-php.js"></script>
    <script src="/web/js/theme-monokai.js"></script>
    <script src="/web/js/theme-textmate.js"></script>
    <script src="/web/js/jquery-ace.min.js"></script>
{% endblock javascript %}

